package minesweeper.server;

public class BoardRequest {

    private final String request;
    private final int x; 
    private final int y;
    
    BoardRequest(String request, int x, int y){
        this.x = x;
        this.y = y;
        this.request = request;
    }
    
    public String getRequest(){
        return request;
    }
    
    public int getX(){
        return x;
    }
    
    public int getY(){
        return y;
    }
}
